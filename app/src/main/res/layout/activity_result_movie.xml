<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.guilherme.desafiozup.ResultMovie.ResultMovieActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/btnAction"
                    style="@android:style/Widget.DeviceDefault.Button.Inset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onClickBtnAction"
                    android:text="Action"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgFilmeIcone"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvFilmeTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="AVATAR"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvFilmeAno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tvFilmeTitulo"
                        android:layout_alignBaseline="@+id/tvFilmeTitulo"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="40dp"
                        android:text="2009"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lbFilmeGenero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Genero: "
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvFilmeGenero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/lbFilmeGenero"
                        android:layout_toRightOf="@+id/lbFilmeGenero"
                        android:layout_marginLeft="5dp"
                        android:text="Acao"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvFilmeDuracao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120 min"
                        android:textSize="12sp"
                        android:layout_alignTop="@+id/tvFilmeGenero"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:id="@+id/lbFilmeDuracao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tvFilmeDuracao"
                        android:layout_toLeftOf="@+id/tvFilmeDuracao"
                        android:text="Runtime: "
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginRight="5dp"/>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lbFilmeSinopse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plot: "
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tvFilmeSinopse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/lbFilmeSinopse"
                    android:layout_toRightOf="@+id/lbFilmeSinopse"
                    android:text="Era uma vez uma cidade"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lbFilmeAtores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actors: "
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="8dp"/>

                <TextView
                    android:id="@+id/tvFilmeAtores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/lbFilmeAtores"
                    android:layout_toRightOf="@+id/lbFilmeAtores"
                    android:text="Margo"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lbFilmeDiretor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Director: "
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="8dp"/>

                <TextView
                    android:id="@+id/tvFilmeDiretor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/lbFilmeDiretor"
                    android:layout_toRightOf="@+id/lbFilmeDiretor"
                    android:text="Christopher"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lbFilmeEscritor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Writer: "
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="8dp"/>

                <TextView
                    android:id="@+id/tvFilmeEscritor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/lbFilmeEscritor"
                    android:layout_toRightOf="@+id/lbFilmeEscritor"
                    android:text="Wilk"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lbFilmeProducao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Production: "
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="8dp"/>

                <TextView
                    android:id="@+id/tvFilmeProducao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/lbFilmeProducao"
                    android:layout_toRightOf="@+id/lbFilmeProducao"
                    android:text="Paramount"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lbMetascore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Metascore: "
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMetascore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/lbMetascore"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/lbMetascore"
                    android:text="80"
                    android:textSize="12sp" />

                <RatingBar
                    android:id="@+id/rbMetascore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lbMetascore"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:max="100"
                    android:numStars="5"
                    android:stepSize="0.1" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/lbRatings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ratings"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"/>

            <ListView
                android:id="@+id/listRatings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
